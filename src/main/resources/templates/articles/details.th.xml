<?xml version="1.0"?>
<thlogic>
    <attr sel="#header" th:replace="header :: header"></attr>
    <attr sel="#footer" th:replace="footer :: footer"></attr>

    <attr sel="#article-main" th:object="${article}">
        <attr sel="#article-header/h1" th:text="*{title}"></attr>
        <attr sel="#nickname" th:text="*{nickname}"></attr>
        <attr sel="#email" th:text="*{email}"></attr>
        <attr sel="#created-at/time" th:datetime="*{article.createdAt}" th:text="*{#temporals.format(article.createdAt, 'yyyy-MM-dd')}"></attr>
        <attr sel="#hashtag" th:text="*{hashtag}"></attr>
        <attr sel="#article-content" th:text="*{content}"></attr>
        <attr sel="#article-comments" th:remove="all-but-first">
            <attr sel="li[0]" th:each="articleComment : ${articleComments}">
                <attr sel="div/strong" th:text="${articleComment.nickname}" />
                <attr sel="div/small/time" th:datetime="${articleComment.createdAt}" th:text="${#temporals.format(article.createdAt, 'yyyy-MM-dd')}"/>
                <attr sel="div/p" th:text="${articleComment.content}" />
            </attr>
        </attr>

        <attr sel="#article-buttons">
            <attr sel="#delete-article-form" th:action="'/articles/' + *{id} + '/delete'" th:method="post"/>
            <attr sel="#update-article" th:href="'/articles/' + *{id} + '/form'" />
        </attr>

        <attr sel="#pagination">
            <attr sel="ul">
                <attr sel="li[0]/a"
                      th:href="*{id} - 1 <= 0 ? '#' : |/articles/*{id - 1}|"
                      th:class="'page-link' + (*{id} - 1 <= 0 ? ' disabled' : '')"
                />
                <attr sel="li[1]/a"
                      th:href="*{id} + 1 > ${totalCount} ? '#' : |/articles/*{id + 1}|"
                      th:class="'page-link' + (*{id} + 1 > ${totalCount} ? ' disabled' : '')"
                />
            </attr>
    </attr>


</thlogic>